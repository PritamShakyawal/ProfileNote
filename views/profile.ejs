<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-end">
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block" href="/logout">logout</a>

        </div>
        <div class="flex items-start gap-3">
            <div class="w-20 h-20 rounded-md overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
            </div>
        <h3 class="text-3xl mb-5"><%= user.name %></h3>
        </div>
        <h5 class="mb-5 mt-3">You can create a post</h5>
        <form action="/post" method="post">
            <textarea placeholder="What's on your mind" class="w-1/3 p-3 outline-none resize-none bg-transparent border-2 border-zinc-800 rounded-md" name="content"></textarea>
            <input class="px-3 w-50 py-2 bg-blue-500 block rounded-md mt-2" type="Submit">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your Posts</h3>
            <div class="postContainer mt-5">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="post w-1/3 p-4 mb-4 rounded-md bg-zinc-900 border-2 borderr-zinc-800">
                        <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
                        <p class="text-sm tracking-tight"> <%= post.content %></p>
                        <small class="mt-2 inline-block"> <%= post.likes.length %> likes </small>
                        <div class=btns flex gap-4 mt-5">
                        <a class="text-blue-500" href="/like/<%= post._id %>">
                            <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
                        </a>
                        <a class="text-zinc-500" href="/edit/<%= post._id %>">edit</a>
                    </div>
                    </div>
              <%  }) %>
                
            </div>
        </div>
    </div>
</body>
</html>